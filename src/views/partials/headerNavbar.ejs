<header class="main-header">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-5 col-md-2">
				<a href="/" class="main-header_home-link">
					<img src="/images/logo-mercado-liebre.svg">
				</a>
			</div>

			<div class="col-7 col-md-6">
				<form action="/search" method="GET" class="search-form">
					<input type="text" name="keywords" placeholder="Buscar productos, marcas y más" class="search-form_input">
					<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
				</form>
			</div>

			<div class="col-12 col-md-4">
				<a href="#" class="main-header_credit-link">
					<i class="fas fa-hand-holding-usd"></i>
					Comprá en cuotas y sin tarjeta de crédito
				</a>
			</div>
		</div>

		<button class="btn-toggle-navbar">
			<i class="fas fa-bars"></i>
		</button>

		<nav class="main-navbar">
			<ul class="left-navbar">
				<li><a href="/products">Todos los productos</a></li>
				<li><a href="#">Ofertas</a></li>
				<li><a href="#">Tiendas Oficiales</a></li>
				<li><a href="/products/create">Vender</a></li>
				<li><a href="#">Ayuda</a></li>
			</ul>

			<ul class="right-navbar">
				<% if (locals.isLogged) { %>
					<li><a href="#">Mis compras <i class="fas fa-shopping-basket"></i></a></li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="dropUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							<img  height="30" src="/images/users/<%= locals.userLogged.avatar %>" width="40" style="border-radius: 100%;">
							Hi <%= locals.userLogged.nombreApellido %> 
						</a>
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" href="/users/profile">My profile</a>
							<li><hr class="dropdown-divider"></li>
							<a class="dropdown-item" href="/users/logout">Logout</a>
						</ul>
					</li>
					
				<% } else { %>
					<li class="nav-item"><a class="nav-link" href="/users/register">Creá tu cuenta <i class="far fa-address-card"></i></a></li>
					<li class="nav-item"><a class="nav-link" href="/users/login">Ingresá <i class="fas fa-sign-in-alt"></i></a></li>
				<% } %>
			</ul>
		</nav>
	</div>
</header>