<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: "colors"}) %>

    <body>
        <!-- Header -->
        <%- include('partials/headerNavbar') %>
            <main class="register">
                <% if (!locals.user) { %>
                    <form action="" class="register_section" method="POST">
                        <div class="form_box">
                            <label for="nombre" class="form-label">Ingrese su nombre</label>
                            <input type="text" id="nombre" name="nombre" class="form-input" value="<%= locals.old ? old.nombre : null %>">
                            <% if (locals.errors && errors.nombre) { %>
                                <small class="form_box_mensaje-error"><%= errors.nombre.msg %></small>
                            <% } %>
                        </div>
                        <div class="form_box">
                            <label for="" class="form-label">Colores</label>
                            <select name="color" id="" class="form-input">
                                <option value="rojo" <%= locals.old && old.color === "rojo" && "selected" %>>Rojo</option>
                                <option value="azul" <%= locals.old && old.color === "azul" && "selected" %>>Azul</option>
                                <option value="verde" <%= locals.old && old.color === "verde" && "selected" %>>Verde</option>
                                <option value="amarillo" <%= locals.old && old.color === "amarillo" && "selected" %>>Amarillo</option>
                            </select>
                        </div>
                        <div class="form_box">
                            <label for="email" class="form-label">Ingrese su email</label>
                            <input type="email" id="email" name="email" class="form-input" value="<%= locals.old ? old.email : null %>">
                            <% if (locals.errors && errors.email) { %>
                                <small class="form_box_mensaje-error"><%= errors.email.msg %></small>
                            <% } %>
                        </div>
                        <div class="form_box">
                            <label for="edad" class="form-label">Ingrese su edad</label>
                            <input type="number" id="edad" name="edad" class="form-input" value="<%= locals.old ? old.edad : null %>">
                            <% if (locals.errors && errors.edad) { %>
                                <small class="form_box_mensaje-error"><%= errors.edad.msg %></small>
                            <% } %>
                        </div>
                        <button type="submit" class="buy-now-button">Enviar</button>
                    </form>
                <% } else{ %>
                    <div>
                        <h1 class="products-title">Hola <%= locals.user && user.nombre ? user.nombre: "desconocido" %> , elegiste el color: <%= locals.user && user.color %>, tu email es:
                            <%= locals.user && user.email %> <%= locals.user && user.edad ? `y tu edad es: ${user.edad}.` : "." %></h1>
                    </div>
                <% } %> 
                
            </main>
            <!-- footer -->
            <%- include('partials/footer') %>
    </body>